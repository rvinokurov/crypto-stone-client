@keyframes card-fade {
  0% {
    opacity 1
  }

  100% {
    opacity 0
  }
}


@keyframes player-card-glow {
  0% {
    box-shadow inset 0 0 5rem 0 #b58bad
  }
  50% {
    box-shadow inset 0 0 5rem 0 #5cda94
  }
  100% {
    box-shadow inset 0 0 5rem 0 #b58bad
  }
}


:host
  width 100%
  height 100%
  display block






.card

  &--burn
    border-radius 0.4rem
    overflow hidden
    z-index 70000
    position absolute
    width 100%
    height 100%
    opacity 0.4
    display none
    top 0
    left 0
    background-size cover
    background-repeat no-repeat
    background-image url(/assets/card-burn.gif)

    &_active
      display block


  &--wrapper
    width 100%
    height 100%
    position relative
    background-image url('/assets/card-background.jpg')
    background-repeat no-repeat
    background-size 100% 100%
    border-radius 5%
    &_player
      box-shadow inset 0 0 2rem 0.1rem rgba(181, 139, 173, 0.8)


    &_opponent
      box-shadow inset 0 0 2rem 0.1rem rgba(238, 124, 0, 0.8)

    &_glow
      animation player-card-glow  1.4s  ease-in-out infinite

    &_faded
      animation card-fade .7s ease-in forwards

  &--avatar
    background-position 50% 50%
    background-size contain
    background-repeat no-repeat

    position absolute
    z-index 1
    top 0
    left 0
    width 100%
    height 100%


  &--defence, &--attack
    position absolute
    width 1.8rem
    height 1.8rem
    bottom 0rem

  &--defence
    right 0rem
    background-image url('/assets/shield-air.png')
    background-repeat no-repeat
    background-size cover

  &--sausage-steal
    right: 1.1rem;
    top: 0.3rem;
    height 1.6rem
    width 1.2rem
    background-image url('/assets/paw.png')
    background-repeat no-repeat
    background-size contain
    position absolute
    .card--value
      top -0.1rem
      left 0.9rem

  &--sausage-generation
    left 0
    top 0.1rem
    width 1.2rem
    height 1.6rem
    position absolute
    &:after
      content ''
      display block
      background-image url('/assets/sausage.png')
      background-repeat no-repeat
      background-size contain
      position absolute
      width: 1.3rem;
      height: 1.26rem;
      top: 0.2rem;
      left: -0.46rem;
      transform rotate(185deg)



    .card--value
      top 0.1rem
      left 0.4rem


  &--attack
    left -0.2rem
    bottom -0.3rem
    width 2.3rem
    height 2.3rem
    background-image url('/assets/sword-fire.png')
    background-repeat no-repeat
    background-size contain
    position absolute

    .card--value
      top 0.4rem
      left 0.33rem

  &--value
    position: absolute
    top: 0.15rem;
    left: 0.05rem;
    color: #323232;
    display: inline-block;
    font-size: 1rem;
    line-height: 1.5rem;
    width: 1.4rem;
    height: 1.4rem;
    z-index: 250;
    text-align: center;
    letter-spacing: -0.13em;
    text-shadow 0 0 0.1rem #848484











