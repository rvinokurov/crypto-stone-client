@import '../styles/card.styl'

@keyframes enemy-card-put-to-hand {
  30% {
    transform translate3d(-150%, 250%, 0) scale(1.5)
    box-shadow -1rem 1rem 1rem 0.1rem rgba(0, 0, 0, 0.5)
  }

  50% {
    transform translate3d(-150%, 250%, 0) scale(3)
    box-shadow -1rem 1rem 1rem 0.1rem rgba(0, 0, 0, 0.3)
  }

  75% {
    transform translate3d(-150%, 250%, 0) scale(3)
    box-shadow -1rem 1rem 1rem 0.1rem rgba(0, 0, 0, 0.3)
  }



  80% {
    transform translate3d(5%, -5%, 0) scale(0.8) rotateZ(10deg) rotateY(-30deg)
    box-shadow -0.2rem 0.2rem 0.5rem 0.1rem rgba(0, 0, 0, 0.6)
  }

  90% {
    transform translate3d(0, 0, 0) scale(1.05) rotateZ(-15deg)  rotateY(0deg)
    box-shadow 0rem 0rem 1.5rem 0.1rem rgba(0, 0, 0, 0.8)
  }
  95% {
    transform translate3d(0, 0, 0) scale(1.1) rotateZ(9deg) rotateY(0deg)
    box-shadow 0rem 0rem 1.5rem 0.1rem rgba(0, 0, 0, 0.8)
  }

  100% {
    transform translate3d(0, 0, 0) scale(1) rotateY(0deg)
    box-shadow 0 0 0 0 black
  }
}


:host
  position relative
  z-index 200
  host()
  padding  1.6rem
  margin -1.6rem -1.2rem

.enemy-hand-card
  card-host()
  box-shadow 0.1rem 0.1rem 0.3rem 0.1rem rgba(0, 0, 0, 0.3), inset 0 0 0.3rem 0.1rem #ee7c00
  border 1px solid #ee7c00

  &--putted-to-hand
    opacity 1
    z-index 40000
    box-shadow -1rem 1rem 1rem 0.1rem rgba(0, 0, 0, 0.3)
    transform translate3d(-800%, 0%, 0) scale(0.8) rotateY(-10deg) rotateZ(20deg)
    animation enemy-card-put-to-hand 1.1s ease-in forwards

