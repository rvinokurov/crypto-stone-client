$cardHeight = 8rem
$cardWidth = 5.5rem

host()
  width $cardWidth
  height $cardHeight
  display inline-block
  box-sizing border-box
  margin 0 -0.5em
  position relative
  transition all 0.05s ease

card-host()
  display: block
  width 100%
  height 100%
  position relative

  //overflow hidden
  border-radius 0.4rem
  border 1px solid #b58bad
  box-shadow 0 0 0.3rem 0.1rem #b58bad, inset 0 0 2rem 0rem rgba(181, 139, 173, 0.5), inset 0 0 0.1rem
