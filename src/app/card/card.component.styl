$cardHeight = 8rem
$cardWidth = 5.5rem

@keyframes pulse {
  0% {
    box-shadow 0 0 0.2rem 0.2rem #b58bad, inset 0 0 2rem 0 #b58bad
    border 1px solid #b58bad
  }
  50% {
    border 1px solid #b58bad
    box-shadow 0 0 0.5rem 0.5rem #b58bad, inset 0 0 5rem 0rem rgba(181, 139, 173, 0.61)
  }
  100% {
    box-shadow 0 0 0.2rem 0.2rem #b58bad, inset 0 0 2rem 0 #b58bad
    border 1px solid #b58bad
  }
}

@keyframes target {
  0% {
    box-shadow  0 0 0.3rem 0.3rem #ee7c00, inset 0 0 2rem 0 rgba(238, 124, 0, 0.3)
    border 1px solid #ee7c00
  }
  50% {
    border 1px solid #ee7c00
    box-shadow  0 0 0.3rem 0.3rem #ee7c00, inset 0 0 5rem 0rem rgba(238, 124, 0, 0.3)
  }
  100% {
    box-shadow  0 0 0.3rem 0.3rem #ee7c00, inset 0 0 2rem 0 #ee7c00
    border 1px solid #ee7c00
  }
}



:host
  overflow hidden
  display: inline-block
  width $cardWidth
  height $cardHeight
  padding  0.6em
  box-sizing border-box
  margin 0 -0.5em
  position relative
  transition all 0.2s ease
  &.drag-handle
    cursor url('/assets/pointer.cur'), auto
  &.drag-handle:active
    cursor url('/assets/pointer.cur'), auto
  .card
    overflow hidden
    transition all 0.1s ease
  &:hover:not(.enemy):not(.in-desk)
    transform translateY(0.27em)
    margin -0.55em 0.6em -0.55em 0.6em
    width $cardWidth * 1.1
    height $cardHeight * 1.1
    cursor url('/assets/pointer.cur'), auto
    border-radius 0.44rem

  &.target:hover
    .card
      animation: target 1.4s infinite ease-in-out;

  &.in-attack:not(.enemy)
    width $cardWidth * 1.1
    height $cardHeight * 1.1
    margin -0.55em 0
    transform translateY(0.27em)
    .card
      border-radius 0.44rem
      border 1px solid #487a8b
      box-shadow 0 0 0 0 #487a8b
      animation: pulse 1.4s infinite ease-in-out;



:host.in-desk
  margin 0 -0.2rem

:host.enemy
  .card
    box-shadow 0 0 0.3rem 0.1rem #ee7c00, inset 0 0 2rem 0rem rgba(238, 124, 0, 0.5)
    border 1px solid #ee7c00
    background-image url('/assets/deck-enemy.jpg');
    background-size cover
    background-repeat no-repeat

:host.enemy.in-desk
  .card
    background white



.card
  height 100%
  width 100%
  display inline-block
  border-radius 0.4rem
  border 1px solid #b58bad
  background-color #ffffff
  box-shadow 0 0 0.3rem 0.1rem #b58bad, inset 0 0 2rem 0rem rgba(181, 139, 173, 0.5)
  position relative

  &--avatar
    background-position 50% 50%
    background-size contain
    background-repeat no-repeat

    position absolute
    z-index 1
    top 0
    left 0
    width 100%
    height 100%


  &--defence, &--attack
    position absolute
    width 1.8rem
    height 1.8rem
    bottom 0rem

  &--defence
    right 0rem
    background-image url('/assets/shield-air.png')
    background-repeat no-repeat
    background-size cover

  &--sausage-steal
    right: 1.1rem;
    top: 0.3rem;
    height 1.6rem
    width 1.2rem
    background-image url('/assets/paw.png')
    background-repeat no-repeat
    background-size contain
    position absolute
    .card--value
      top -0.1rem
      left 0.9rem

  &--sausage-generation
    left 0
    top 0.1rem
    width 1.2rem
    height 1.6rem
    background-image url('/assets/sausage.png')
    background-repeat no-repeat
    background-size contain
    position absolute

    .card--value
      top 0.1rem
      left 0.4rem


  &--attack
    left -0.2rem
    bottom -0.3rem
    width 2.3rem
    height 2.3rem
    background-image url('/assets/sword-fire.png')
    background-repeat no-repeat
    background-size contain
    position absolute

    .card--value
      top 0.4rem
      left 0.33rem

  &--value
    position: absolute
    top: 0.15rem;
    left: 0.05rem;
    color: #323232;
    display: inline-block;
    font-size: 1rem;
    line-height: 1.5rem;
    width: 1.4rem;
    height: 1.4rem;
    z-index: 250;
    text-align: center;
    letter-spacing: -0.13em;
    text-shadow 0 0 0.1rem #848484











