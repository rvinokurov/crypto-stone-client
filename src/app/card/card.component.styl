$cardHeight = 6.6rem
$cardWidth = 4.6rem

@keyframes pulse {
  0% {
    box-shadow 0 0 0.2rem 0.2rem #487a8b, inset 0 0 0.2rem 0.2rem #487a8b
    border 1px solid #487a8b
  }
  50% {
    border 1px solid #343e72
    box-shadow 0 0 0.5rem 0.5rem #343e72, inset 0 0 5rem 0rem rgba(52, 62, 114, 0.6)
  }
  100% {
    box-shadow 0 0 0.2rem 0.2rem #487a8b, inset 0 0 0.2rem 0.2rem #487a8b
    border 1px solid #487a8b
  }
}

:host
  display: inline-block
  width $cardWidth
  height $cardHeight
  padding  0.6em
  box-sizing border-box
  margin 0 -0.5em
  position relative
  transition all 0.2s ease
  .card
    transition all 0.1s ease
  &:hover:not(.enemy):not(.in-desk)
    transform translateY(0.27em)
    margin -0.55em 0.6em -0.55em 0.6em
    width $cardWidth * 1.1
    height $cardHeight * 1.1
    cursor pointer
    border-radius 0.44rem
  &.in-desk:hover
    width $cardWidth * 1.1
    height $cardHeight * 1.1
    margin -0.55em 0
    transform translateY(0.27em)
    .card
      border-radius 0.44rem
      border 1px solid #487a8b
      box-shadow 0 0 0 0 #487a8b
      animation: pulse 1.6s infinite ease-in-out;




.card
  height 100%
  width 100%
  display inline-block
  border-radius 0.4rem
  border 1px solid #084d8b
  background-color #ffffff
  box-shadow 0 0 0.3rem 0.3rem #487a8b



