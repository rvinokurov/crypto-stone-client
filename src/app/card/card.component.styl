$cardHeight = 6.6rem
$cardWidth = 4.6rem

:host
  display: inline-block
  width $cardWidth
  height $cardHeight
  padding  0.6em
  box-sizing border-box
  margin 0 -0.5em
  position relative
  transition margin 0.1s ease, width 0.1s ease, height 0.1s ease
  &:hover:not(.enemy)
    margin -0.66em 0.6em 0 0.6em
    width $cardWidth * 1.1
    height $cardHeight * 1.1
    cursor pointer



.card
  height 100%
  width 100%
  display inline-block
  border-radius 0.3rem
  border 1px solid #084d8b
  background-color #ffffff
  box-shadow 0 0 0.3rem 0.3rem #487a8b



