$cardHeight = 8rem
$cardWidth = 5.5rem

@keyframes pulse {
  0% {
    box-shadow 0 0 1rem 0.1rem #b58bad, inset 0 0 5rem 0 #b58bad
    border 1px solid #b58bad
  }
  50% {
    border 1px solid #b58bad
    box-shadow 0 0 1rem 0.1rem #5cda94, inset 0 0 5rem 0rem #5cda94
  }
  100% {
    box-shadow 0 0 1rem 0.1rem #b58bad, inset 0 0 5rem 0 #b58bad
    border 1px solid #b58bad
  }
}

@keyframes put-in-desk {
  30% {
    opacity 1
    transform translate3d(30%, -30%, 0) scale(1.2)
    box-shadow -1rem 1rem 1rem 0.1rem rgba(0, 0, 0, 0.3)
  }

  65% {
    opacity 1
    transform translate3d(5%, 5%, 0) scale(0.8)
    box-shadow -0.2rem 0.2rem 0.5rem 0.1rem rgba(0, 0, 0, 0.6)
  }

  80% {
    opacity 1
    transform translate3d(0, 0, 0) scale(1.05) rotate(-5deg)
    box-shadow 0rem 0rem 1.5rem 0.1rem rgba(0, 0, 0, 0.8)
  }
  85% {
    opacity 1
    transform translate3d(0, 0, 0) scale(1.1) rotate(3deg)
    box-shadow 0rem 0rem 1.5rem 0.1rem rgba(0, 0, 0, 0.8)
  }

  100% {
    opacity 1
    transform translate3d(0,0,0) scale(1)
    box-shadow 0 0 0 0 black
  }
}

@keyframes target {
  0% {
    box-shadow  0 0 0.3rem 0.3rem #ee7c00, inset 0 0 2rem 0 rgba(238, 124, 0, 0.3)
    border 1px solid #ee7c00
  }
  50% {
    border 1px solid #ee7c00
    box-shadow  0 0 0.3rem 0.3rem #ee7c00, inset 0 0 5rem 0rem rgba(238, 124, 0, 0.3)
  }
  100% {
    box-shadow  0 0 0.3rem 0.3rem #ee7c00, inset 0 0 2rem 0 #ee7c00
    border 1px solid #ee7c00
  }
}

.card-host
  width 100%
  height 100%


:host:not(.in-attack)
  .card-host
    transition all 0.05s ease-out
    &--put-in-desk
      opacity 0
      box-shadow -1rem 1rem 1rem 0.1rem rgba(0, 0, 0, 0.3)
      transform translate3d(20%, 20%, 0) scale(1.2)
      animation put-in-desk .7s ease-in forwards


:host
  //overflow hidden
  display: inline-block
  width $cardWidth
  height $cardHeight
  padding  0.6em
  box-sizing border-box
  margin 0 -0.5em
  position relative
  transition all 0.05s ease
  &.drag-handle
    cursor url('/assets/pointer.cur'), auto
  &.drag-handle:active
    cursor url('/assets/pointer.cur'), auto
  .card
    //overflow hidden
    transition all 0.05s ease-out
  &:hover:not(.enemy):not(.in-desk)
    transform translateY(-0.1rem)
    margin -0.55em 0.6em -0.55em 0.6em
    //width $cardWidth * 1.1
    //height $cardHeight * 1.1
    cursor url('/assets/pointer.cur'), auto
    border-radius 0.44rem

    .card-host
      transform scale(1.1)


  &.target:hover
    .card
      animation: target 1.4s infinite ease-in-out;

  &.in-attack:not(.enemy)
    //width $cardWidth * 1.1
    //height $cardHeight * 1.1
    margin -0.55em 0
    //transform translateY(-0.1rem)
    .card-host, .card-host.card-host--put-in-desk
      //opacity 1
      transform scale(1.1)!important
      //animation none
    .card
      border-radius 0.44rem
      border 1px solid #487a8b
      box-shadow 0 0 0 0 #487a8b
      animation: pulse 1.4s infinite ease-in-out;



:host.in-desk
  margin 0 -0.2rem

:host.enemy
  .card
    box-shadow 0 0 0.3rem 0.1rem #ee7c00, inset 0 0 2rem 0rem rgba(238, 124, 0, 0.5)
    border 1px solid #ee7c00
    background-image url('/assets/deck-enemy.jpg');
    background-size cover
    background-repeat no-repeat

:host.enemy.in-desk
  .card
    background white



.card
  height 100%
  width 100%
  display inline-block
  border-radius 0.4rem
  border 1px solid #b58bad
  background-color #ffffff
  box-shadow 0 0 0.3rem 0.1rem #b58bad, inset 0 0 2rem 0rem rgba(181, 139, 173, 0.5), inset  0 0 0.1rem 0.05rem black
  position relative
  background-image url('/assets/card-background.jpg')
  background-repeat no-repeat
  background-size 100% 100%



  &--avatar
    background-position 50% 50%
    background-size contain
    background-repeat no-repeat

    position absolute
    z-index 1
    top 0
    left 0
    width 100%
    height 100%


  &--defence, &--attack
    position absolute
    width 1.8rem
    height 1.8rem
    bottom 0rem

  &--defence
    right 0rem
    background-image url('/assets/shield-air.png')
    background-repeat no-repeat
    background-size cover

  &--sausage-steal
    right: 1.1rem;
    top: 0.3rem;
    height 1.6rem
    width 1.2rem
    background-image url('/assets/paw.png')
    background-repeat no-repeat
    background-size contain
    position absolute
    .card--value
      top -0.1rem
      left 0.9rem

  &--sausage-generation
    left 0
    top 0.1rem
    width 1.2rem
    height 1.6rem
    position absolute
    &:after
      content ''
      display block
      background-image url('/assets/sausage.png')
      background-repeat no-repeat
      background-size contain
      position absolute
      width: 1.3rem;
      height: 1.26rem;
      top: 0.2rem;
      left: -0.46rem;
      transform rotate(185deg)



    .card--value
      top 0.1rem
      left 0.4rem


  &--attack
    left -0.2rem
    bottom -0.3rem
    width 2.3rem
    height 2.3rem
    background-image url('/assets/sword-fire.png')
    background-repeat no-repeat
    background-size contain
    position absolute

    .card--value
      top 0.4rem
      left 0.33rem

  &--value
    position: absolute
    top: 0.15rem;
    left: 0.05rem;
    color: #323232;
    display: inline-block;
    font-size: 1rem;
    line-height: 1.5rem;
    width: 1.4rem;
    height: 1.4rem;
    z-index: 250;
    text-align: center;
    letter-spacing: -0.13em;
    text-shadow 0 0 0.1rem #848484











