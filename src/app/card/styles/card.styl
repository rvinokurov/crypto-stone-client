$cardHeight = 10rem
$cardWidth = 7.5rem

host()
  width $cardWidth
  height $cardHeight
  display inline-block
  box-sizing border-box
  position relative

card-host()
  transition all 0.1s ease
  display block
  width 100%
  height 100%
  position relative
  border-radius 0.4rem
  border 1px solid #b58bad


damage-burn-element()
  text-shadow 0rem 0rem 0.1rem rgba(0, 0, 0, 0.9)
  font-size 2.5rem
  position absolute
  z-index 70000
  transform translate3(0,0,0)
