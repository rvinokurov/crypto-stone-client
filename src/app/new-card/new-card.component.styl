@keyframes pulse-new-card {
  0% {
    box-shadow 0 0 3rem 0.1rem #b58bad
  }
  33% {
    box-shadow 0 0 4rem 0.6rem #b58bad
  }
  66% {
    box-shadow 0 0 4rem 0.6rem #b55d92
  }
  100% {
    box-shadow 0 0 3rem 0.1rem #b58bad
  }
}

:host
  position absolute
  display block
  transition all 0.3s ease-out
  width: 12rem
  height 18rem
  transform scale(0.3)
  top 100%
  left 100%
  margin-top -15rem
  margin-left -12rem
  z-index 20000
  perspective 800px
  &.showed
    top 50%
    left 50%
    margin-top -9rem
    margin-left -6rem
    transform scale(1)




.new-card
  width 100%
  height 100%
  position absolute
  transform-style preserve-3d
  transition transform 1s ease-out

  &_flipped
    transform: rotateY(180deg)

  &--face, &--deck
    margin: 0
    display: block
    position: absolute
    width: 100%
    height: 100%
    backface-visibility: hidden
    border-radius 1rem
    border 1px solid #b58bad
    overflow hidden
    box-shadow 0 0 2rem 0.3rem #b58bad
    animation: pulse-new-card 2s infinite ease-in-out;


  &--deck
    background-image url('/assets/deck.jpg');
    background-size cover
    background-repeat no-repeat




  &--face
    background: white;
    transform: rotateY(180deg);
