@keyframes pulse-new-card {
  0% {
    box-shadow 0 0 3rem 0.1rem #b58bad, inset 0 0 3rem 0.1rem #b58bad,  inset  0 0 0.2rem 0.1rem black
  }
  33% {
    box-shadow 0 0 4rem 0.6rem #b58bad, inset 0 0 3rem 0.1rem #b58bad,  inset  0 0 0.2rem 0.1rem black
  }
  66% {
    box-shadow 0 0 4rem 0.6rem #b55d92, inset 0 0 3rem 0.1rem #b58bad,  inset  0 0 0.2rem 0.1rem black
  }
  100% {
    box-shadow 0 0 3rem 0.1rem #b58bad, inset 0 0 3rem 0.1rem #b58bad,  inset  0 0 0.2rem 0.1rem black
  }
}

:host
  position absolute
  display block
  transition all 0.3s ease-out
  width: 12rem
  height 18rem
  transform scale(0.3)
  top 100%
  left 100%
  margin-top -15rem
  margin-left -12rem
  z-index 20000
  perspective 800px
  &.showed
    top 50%
    left 50%
    margin-top -9rem
    margin-left -6rem
    transform scale(1)




.new-card
  width 100%
  height 100%
  position absolute
  transform-style preserve-3d
  transition transform 1s ease-out


  &--avatar
    background-position 50% 50%
    background-size contain
    background-repeat no-repeat

    position absolute
    z-index 1
    top 0
    left 0
    width 100%
    height 100%


  &--defence, &--attack
    position absolute
    width 3.3rem
    height 3.3rem
    bottom 0.7rem

  &--defence
    right 0.3rem
    background-image url('/assets/shield-air.png')
    background-repeat no-repeat
    background-size cover
    .new-card--value
      top 0.6rem
      left 0.7rem

  &--sausage-steal
    right: 0.3rem;
    top: 0.7rem;
    height 2.8rem
    width 2.8rem
    background-image url('/assets/paw.png')
    background-repeat no-repeat
    background-size contain
    position absolute
    .new-card--value
      top: 0.4rem;
      right: 3.2rem;
      left auto

  &--sausage-generation
    left 0
    top 0.6rem
    width 3.2rem
    height 3.2rem
    position absolute

    &:after
      content ''
      display block
      transform rotateY(190deg)
      width 3.2rem
      height 3.2rem
      background-image url('/assets/sausage.png')
      background-repeat no-repeat
      background-size contain
      position absolute
      top: 0;
      left: -1rem

    .new-card--value
      top 0.6rem
      left 1.9rem

  &--attack
    left -0.2rem
    bottom 0.2rem
    width 4.3rem
    height 4.3rem
    background-image url('/assets/sword-fire.png')
    background-repeat no-repeat
    background-size contain
    position absolute

    .new-card--value
      top 1.1rem
      left 1.3rem

  &--value
    position: absolute
    top: 0.15rem;
    left: 0.05rem;
    color: #323232;
    display: inline-block;
    font-size: 1.7rem;
    line-height: 2rem;
    width: 1.4rem;
    height: 1.4rem;
    z-index: 250;
    text-align: center;
    letter-spacing: -0.13em;
    text-shadow 0 0 0.1rem #848484





  &_flipped
    transform: rotateY(180deg)

  &--face, &--deck
    margin: 0
    display: block
    position: absolute
    width: 100%
    height: 100%
    backface-visibility: hidden
    border-radius 1rem
    border 1px solid #b58bad
    overflow hidden
    box-shadow 0 0 2rem 0.3rem #b58bad, inset 0 0 3rem 0.1rem #b58bad,  inset  0 0 0.2rem 0.1rem black
    //animation: pulse-new-card 2s infinite ease-in-out;

  &--deck
    background-image url('/assets/deck.jpg');
    background-size cover
    background-repeat no-repeat




  &--face
    background-image url('/assets/card-background.jpg')
    background-repeat no-repeat
    background-size 100% 100%

    transform: rotateY(180deg);
