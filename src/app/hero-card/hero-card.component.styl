.hero-card
  height 8rem
  width 8rem
  border 1px solid #343434
  border-radius 50%

  &:after
    content ''
    display block
    width 1.5rem
    height 2rem
    position absolute
    top -0.8rem
    left 3.25rem
    background-image url('/assets/gem.png')
    background-repeat no-repeat
    background-size contain



  &--card
    background-image url('/assets/card-background.jpg')
    background-repeat no-repeat
    background-size 100% 100%
    border-radius 50%
    height calc(8rem - 10px)
    width calc(8rem - 10px)
    margin-top 5px
    margin-left 5px
    box-shadow  inset 0 0 2rem 0 #b58bad,
    0 0 2px 0 black

  &--hero
    width 100%
    height 100%
    background-repeat no-repeat
    background-position 50% 50%
    background-size 100%



  &_enemy
    background-color #ee7c00
    box-shadow  inset 0 0 2px 0 black,
                0 0 1rem 0.1rem black

  &_player
    background-color #b58bad
    box-shadow  inset 0 0 2px 0 black,
                0 0 1rem 0.1rem black
