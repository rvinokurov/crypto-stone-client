.hero-card
  height 9rem
  width 6rem
  background-color #56585f
  border 1px solid #343434

  border-radius 0.3rem

  &_enemy
    box-shadow  inset 0 0 2rem 0 rgba(148, 38, 38, 0.75),
                0 0 1rem 0.1rem black

  &_player
    box-shadow  inset 0 0 2rem 0 rgba(34, 71, 161, 0.75),
                0 0 1rem 0.1rem black
