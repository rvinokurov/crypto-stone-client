$player-pane-height = 7rem

.desk
  width 100%
  height 100%
  background-color #024329
  position relative

  &--playground
    position absolute
    width 100%
    height "calc(100% - %s)" % ($player-pane-height * 2)
    top $player-pane-height

  &--card-pane
    z-index 500
    position absolute
    width 24rem
    left calc(50% - 12rem)
    height 6rem

    &_enemy
      top 1rem

    &_player
      bottom 1rem


  &--pane
    background-color #4c6c7a;
    width 70%

    height $player-pane-height
    position absolute
    border-radius 0.5rem

    &_enemy
      top 0.5rem
      right 2rem

    &_player
      left 2rem
      bottom 0.5rem

  &--hero-card
    z-index 1000
    position absolute
    &_enemy
      top  1rem
      right 1rem

    &_player
      bottom 1rem
      left 1rem




