$player-pane-height = 9rem
$cardHeight = 7rem
$cardWidth = 5.5rem



:host
  display block
  width 100%
  height 100%

.desk
  cursor url('/assets/default.cur'), auto
  width 100%
  height 100%
  //background-color #273745
  background-image url('/assets/wood.png')
  position relative
  box-shadow inset 0 0 1rem 0.5rem rgba(23, 34, 46, 0.5)
  overflow hidden
  padding 0 4rem
  box-sizing border-box


  &--wrapper
    height 100%
    max-width 54rem
    width 100%
    margin 0 auto
    position relative



  $playgroundOffset = $player-pane-height


  &--playground
    box-sizing border-box
    position absolute
    width calc(100% - 1em)
    height calc(50% - 6rem)
    border-bottom-left-radius: 20% 20%;
    border-bottom-right-radius: 20% 20%;
    border-top-left-radius: 20% 20%;
    border-top-right-radius: 20% 20%;
    background-color: #b88264
    box-shadow inset 0 0 12em 1em #6d4d32, 0 0 10px 5px #5e422d
    left .5em
    z-index 50

    &_top
      top 3rem
    &_bottom
      bottom 3rem

    &_texture
      z-index 51
      background-color transparent
      border none
      border-radious 20%
      box-shadow: none
      background-image url(/assets/wood-opacity.svg)
      background-repeat no-repeat
      background-size cover

    &_dropable
      z-index 40000
      box-shadow none
      background transparent
      border none
      width calc(100% - 3em)
      height "calc(100% - %s)" % ($playgroundOffset * 2)
      left 1.5em
      top $playgroundOffset



  &--playground-border
    z-index 20
    content ''
    display block
    box-sizing border-box
    position absolute
    width calc(100% - 1em + 20px)
    height calc(50% - 6rem + 20px)

    background #6d4d32
    box-shadow inset 0 0 6px 4px #5e422d, 0.3rem 0.3rem 0.2rem 0.05rem rgba(0, 0, 0, 0.3)
    left calc(0.5em - 10px)
    border-bottom-left-radius: 20% 20%;
    border-bottom-right-radius: 20% 20%;
    border-top-left-radius: 20% 20%;
    border-top-right-radius: 20% 20%;
    &_top
      top calc(3rem - 10px)
    &_bottom
      bottom calc(3rem - 10px)

  &--playground-inner
    box-sizing border-box
    position absolute
    width calc(100% - 5em)
    height "calc(100% - %s)" % ($playgroundOffset * 2)
    border-bottom-left-radius: 30% 50%;
    border-bottom-right-radius: 30% 50%;
    border-top-left-radius: 30% 50%;
    border-top-right-radius: 30% 50%;
    top $playgroundOffset
    background-image url('/assets/grass3.jpg')
    box-shadow inset 0 0 12em 1em #023c25, 0 0 10px 5px #023c25
    left 2.5em
    z-index 60


  &--playground-border-inner
    z-index 55
    content ''
    display block
    box-sizing border-box
    position absolute
    width calc(100% - 5em + 20px)
    height "calc(100% - %s + 20px)" % ($playgroundOffset * 2)
    top 'calc(%s - 10px)' % $playgroundOffset
    background green
    box-shadow inset 0 0 6px 4px #023c25
    left calc(2.5em - 10px)
    border-bottom-left-radius: 30% 50%;
    border-bottom-right-radius: 30% 50%;
    border-top-left-radius: 30% 50%;
    border-top-right-radius: 30% 50%;







  &--playground-cards
    position absolute
    text-align center
    width 90%
    height $cardHeight + 0.2rem
    left 5%
    z-index 40000
    &_enemy
      top 50%
      margin-top -($cardHeight + 1rem)

    &_active
      z-index 60000

    &_player
      bottom 50%
      margin-bottom -($cardHeight + 1rem)

  &--card-pane
    z-index 50000
    position absolute
    width 24rem
    left calc(50% - 12rem)
    height 8rem
    text-align center
    &_enemy
      top 1rem
    &_player
      bottom 1rem

  &--hero-card
    z-index 1000
    position absolute
    &_enemy
      top 5rem
      right -1.5rem

    &_player
      bottom 6rem
      left -1.5rem




