  &_attack-mode
    cursor url('/assets/attack.cur'), auto

  &--player-name
    padding 0 0.5rem
    display inline-block
    background-color #cc874b
    color black
    position absolute
    border-radius 1rem
    border 1px solid #6b4627
    height 1.1rem
    line-height 1.1rem
    vertical-align middle
    font-size 0.8rem
    z-index 2000

    $playerHorizontal = 8rem
    $playerVertical = 8rem

    &_player
      left $playerHorizontal
      bottom $playerVertical

    &_enemy
      right $playerHorizontal
      top $playerVertical


  $playgroundOffset = $player-pane-height


  &--playground
    box-sizing border-box
    position absolute
    width calc(100% - 3em)
    height "calc(100% - %s)" % ($playgroundOffset * 2)
    border-bottom-left-radius: 20% 20%;
    border-bottom-right-radius: 20% 20%;
    border-top-left-radius: 20% 20%;
    border-top-right-radius: 20% 20%;
    top $playgroundOffset
    background-image url('/assets/grass3.jpg')
    box-shadow inset 0 0 12em 1em #023c25, 0 0 10px 5px #023c25
    left 1.5em
    z-index 20

  &--playground-border
    z-index 10
    content ''
    display block
    box-sizing border-box
    position absolute
    width calc(100% - 3em + 20px)
    height "calc(100% - %s + 20px)" % ($playgroundOffset * 2)
    border-bottom-left-radius: 20% 20%;
    border-bottom-right-radius: 20% 20%;
    border-top-left-radius: 20% 20%;
    border-top-right-radius: 20% 20%;
    top 'calc(%s - 10px)' % $playgroundOffset
    background green
    box-shadow inset 0 0 6px 4px #023c25, 0 0 0.5rem 0 #3b3a3c
    left calc(1.5em - 10px)
    border-bottom-left-radius: 20% 50%;
    border-bottom-right-radius: 20% 50%;
    border-top-left-radius: 20% 50%;
    border-top-right-radius: 20% 50%;


    &:active
      cursor url('/assets/pointer.cur'), auto

  &--playground-cards
    position absolute
    text-align center
    width 90%
    height $cardHeight + 0.2rem
    left 5%
    &_enemy
      top 50%
      margin-top -($cardHeight + 0.2rem)

    &_player
      bottom 50%
      margin-bottom -($cardHeight + 0.2rem)

  &--card-pane
    z-index 500
    position absolute
    width 24rem
    left calc(50% - 12rem)
    height 8rem
    text-align center

    &_enemy
      top 1rem

    &_player
      bottom 1rem

  &--hero-card
    z-index 1000
    position absolute
    &_enemy
      top 3rem
      right 1rem

    &_player
      bottom 3rem
      left 1rem




