@keyframes target {
  0% {
    box-shadow  inset 0 0 2rem 0 #ff3000;
  }
  50% {
    box-shadow  inset 0 0 2rem 0 #ff5602;
  }
  100% {
    box-shadow  inset 0 0 2rem 0 #ff3000;
  }
}


@keyframes attack-defence-pulse
  0%
    transform scale(1)

  50%
    transform scale(1.1)

  51%
    transform scale(1)

  100%
    transform scale(1)


